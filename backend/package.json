    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dompurify": "^3.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "google-auth-library": "^10.5.0",
    "helmet": "^8.1.0",
    "jsdom": "^27.2.0",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.5",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.12",
    "@vitest/ui": "^4.0.10",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "vitest": "^4.0.10"
  }
