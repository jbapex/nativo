{
  "name": "local-mart-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API para Local Mart",
  "main": "server.js",
  "scripts": {
    "dev": "node --watch server.js",
    "start": "node server.js",
    "migrate": "node scripts/migrate.js",
    "migrate:postgres": "node scripts/migrate-to-postgres.js",
    "backup": "node scripts/backup.js --full",
    "backup:cron": "node scripts/backup-cron.js",
    "backup:db": "node scripts/backup.js --database-only",
    "backup:uploads": "node scripts/backup.js --uploads-only",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@sentry/node": "^10.26.0",
    "@sentry/profiling-node": "^10.26.0",
    "bcryptjs": "^2.4.3",
