# Configurações do Servidor
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3006

# Banco de Dados
# Opções: 'sqlite' ou 'postgres'
DB_TYPE=sqlite

# SQLite (padrão)
DB_PATH=./database.sqlite

# PostgreSQL (quando DB_TYPE=postgres)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=local_mart
# DB_USER=postgres
# DB_PASSWORD=sua-senha-aqui

# JWT - OBRIGATÓRIO: Altere em produção!
# Gere uma chave segura: openssl rand -base64 32
JWT_SECRET=seu-secret-super-seguro-aqui-ALTERE-EM-PRODUCAO
# Refresh Token Secret (pode ser o mesmo do JWT_SECRET + '-refresh' ou diferente)
JWT_REFRESH_SECRET=

# Google OAuth (Opcional)
GOOGLE_CLIENT_ID=

# Mercado Pago (Opcional - para pagamentos)
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
# Assinatura secreta do webhook (obtida no painel do Mercado Pago)
# Configure no painel: Webhooks > Assinatura secreta
MERCADOPAGO_WEBHOOK_SECRET=

# Upload de Arquivos
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Rate Limiting para Autenticação (Login)
# Em desenvolvimento: mais permissivo (20 tentativas em 5 minutos)
# Em produção: mais restritivo (5 tentativas em 15 minutos)
AUTH_RATE_LIMIT_WINDOW_MS=300000  # 5 minutos em dev, 900000 (15 min) em produção
AUTH_RATE_LIMIT_MAX=20  # 20 em dev, 5 em produção

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Sentry (Opcional - Error Tracking)
# Obtenha o DSN em: https://sentry.io/settings/projects/
# SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Backup Automático
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7  # Manter backups por 7 dias
# BACKUP_ERROR_NOTIFICATION=email:admin@example.com

